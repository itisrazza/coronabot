{
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "script",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        "semi": "error",
        "indent": ["warn", 4, {

        }],
        "brace-style": [ "warn", "1tbs", { 
            "allowSingleLine": true 
        }],
        "quotes": [ "warn", "double" ],
        "eol-last": "error",
        "func-call-spacing": ["error", "never"]
    }
}